    const select = document.querySelector("#species");
    if (!select) return;

    const currentSpecies = window.location.pathname.split("/").pop();
    Array.from(select.options).forEach(option => {
      option.selected = option.value === currentSpecies;
    });

    select.addEventListener("change", (evt) => {
      const value = evt.target.value;
      if (!value) return;
      window.location.pathname = '/species/' + value;
    });
  });
