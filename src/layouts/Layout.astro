    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-inter bg-gradient-to-br from-slate-50 to-blue-50 min-h-screen">
    
    <!-- Navigation principale moderne -->
    <nav class="sticky top-0 z-40 backdrop-blur-lg bg-white/80 border-b border-white/20 shadow-lg">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          
          <!-- Logo/Titre -->
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-lg">üêß</span>
            </div>
            <div>
              <h1 class="text-xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                Analyse Manchots
              </h1>
              <p class="text-xs text-gray-500">TP3 - Visualisation de donn√©es</p>
            </div>
          </div>

          <select id="species">
          <option value="Adelie">Adelie</option>
          <option value="Chinstrap">Chinstrap</option>
          <option value="Gentoo">Gentoo</option>
          </select>
          <script>
            const currentSpecies = location.pathname.split("/").pop();
            const select = document.querySelector("#species") as HTMLSelectElement;
            if (select) {
              for (const option of select.options) {
                option.selected = option.value === currentSpecies;
              }
            }

            select?.addEventListener("change", (evt) => {
              const value = (evt.target as HTMLSelectElement).value;
              location.pathname = '/species/' + value;
            });
          </script>

        </div>
      </div>
    </nav>

    <!-- Contenu principal -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer moderne -->
    <footer class="mt-auto bg-white/60 backdrop-blur-sm border-t border-white/20">
