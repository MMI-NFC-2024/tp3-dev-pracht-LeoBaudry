---
import Layout from "../layouts/Layout.astro";
import GraphicSpecies from "../components/GraphicSpecies.astro";
import { Tabs, TabsList, TabsTab, TabsPanel } from 'accessible-astro-components';
---

<Layout>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
    <h1 class="text-4xl font-bold text-center mb-2 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
      TP3 - Tous les graphiques
    </h1>
    <p class="text-center text-gray-600 text-lg mb-8">Explorez les données de chaque espèce</p>

    <Tabs class="max-w-6xl mx-auto">
      <TabsList class="flex justify-center gap-4 mb-8 p-2 bg-white/20 backdrop-blur-lg rounded-2xl border border-white/30 shadow-xl">
        <TabsTab id="tab1" controls="Adelie" selected class="flex items-center gap-2 px-6 py-3 rounded-xl font-semibold text-lg transition-all duration-300 aria-selected:bg-gradient-to-r aria-selected:from-orange-500 aria-selected:to-orange-600 aria-selected:text-white aria-selected:shadow-lg aria-selected:scale-105 aria-[selected=false]:bg-white/10 aria-[selected=false]:text-gray-700 aria-[selected=false]:opacity-70 hover:scale-105 hover:opacity-100 ">🐧 Adelie</TabsTab>
        <TabsTab id="tab2" controls="Gentoo" class="flex items-center gap-2 px-6 py-3 rounded-xl font-semibold text-lg transition-all duration-300 aria-selected:bg-gradient-to-r aria-selected:from-teal-500 aria-selected:to-teal-600 aria-selected:text-white aria-selected:shadow-lg aria-selected:scale-105 aria-[selected=false]:bg-white/10 aria-[selected=false]:text-gray-700 aria-[selected=false]:opacity-70 hover:scale-105 hover:opacity-100">🐧 Gentoo</TabsTab>
        <TabsTab id="tab3" controls="Chinstrap" class="flex items-center gap-2 px-6 py-3 rounded-xl font-semibold text-lg transition-all duration-300 aria-selected:bg-gradient-to-r aria-selected:from-purple-500 aria-selected:to-purple-600 aria-selected:text-white aria-selected:shadow-lg aria-selected:scale-105 aria-[selected=false]:bg-white/10 aria-[selected=false]:text-gray-700 aria-[selected=false]:opacity-70 hover:scale-105 hover:opacity-100">🐧 Chinstrap</TabsTab>
      </TabsList>

      <TabsPanel id="Adelie" labelledby="tab1" selected class="animate-fade-in-up">
        <div class=" ext-lg bg-gradient-to-br from-orange-50/90 to-orange-100/80 backdrop-blur-xl rounded-2xl p-8 shadow-2xl border border-orange-200/50">
          <h2 class="text-3xl font-bold text-orange-700 mb-6 pb-2 border-b-4 border-orange-500">Manchots Adelie</h2>
          <div class="bg-white/70 rounded-xl p-6 shadow-inner">
            <GraphicSpecies species="Adelie" />
          </div>
        </div>
      </TabsPanel>

      <TabsPanel id="Gentoo" labelledby="tab2" class="animate-fade-in-up">
        <div class="bg-gradient-to-br from-teal-50/90 to-teal-100/80 backdrop-blur-xl rounded-2xl p-8 shadow-2xl border border-teal-200/50">
          <h2 class="text-3xl font-bold text-teal-700 mb-6 pb-2 border-b-4 border-teal-500">Manchots Gentoo</h2>
          <div class="bg-white/70 rounded-xl p-6 shadow-inner">
            <GraphicSpecies species="Gentoo" />
          </div>
        </div>
      </TabsPanel>

      <TabsPanel id="Chinstrap" labelledby="tab3" class="animate-fade-in-up ">
        <div class="bg-gradient-to-br from-purple-50/90 to-purple-100/80 backdrop-blur-xl rounded-2xl p-8 shadow-2xl border border-purple-200/50">
          <h2 class="text-3xl font-bold text-purple-700 mb-6 pb-2 border-b-4 border-purple-500">Manchots Chinstrap</h2>
          <div class="bg-white/70 rounded-xl p-6 shadow-inner">
            <GraphicSpecies species="Chinstrap" />
          </div>
        </div>
      </TabsPanel>
    </Tabs>
  </div>

</Layout>
